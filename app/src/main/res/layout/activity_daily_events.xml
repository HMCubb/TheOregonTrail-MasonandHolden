<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".dailyEvents">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="409dp"
        android:layout_height="146dp"
        android:layout_marginStart="756dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="755dp"
        android:background="#FFFFFF"
        android:text="Events"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="96sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eventText"
        android:layout_width="1705dp"
        android:layout_height="577dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="54dp"
        android:background="#FFFFFF"
        android:text="Events"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="normal"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="418dp"
        android:layout_height="123dp"
        android:layout_marginStart="751dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="751dp"
        android:layout_marginBottom="76dp"
        android:text="next"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventText" />

</androidx.constraintlayout.widget.ConstraintLayout>