<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DailyStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DailyStatus">

    <TextView
        android:id="@+id/ProgressLabels"
        android:layout_width="435dp"
        android:layout_height="368dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:text="Date: Distance: Health: Temperature: "
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/MoneyCount"
        app:layout_constraintTop_toBottomOf="@+id/ProgressTitle" />

    <TextView
        android:id="@+id/TemperatureTracker"
        android:layout_width="119dp"
        android:layout_height="95dp"
        android:layout_marginStart="26dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ProgressLabels"
        app:layout_constraintTop_toBottomOf="@+id/HealthTracker" />

    <TextView
        android:id="@+id/DistanceTracker"
        android:layout_width="174dp"
        android:layout_height="81dp"
        android:layout_marginStart="26dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ProgressLabels"
        app:layout_constraintTop_toBottomOf="@+id/DayTracker" />

    <TextView
        android:id="@+id/DayTracker"
        android:layout_width="278dp"
        android:layout_height="89dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ProgressLabels"
        app:layout_constraintTop_toBottomOf="@+id/ProgressTitle" />

    <TextView
        android:id="@+id/HealthTracker"
        android:layout_width="178dp"
        android:layout_height="82dp"
        android:layout_marginStart="26dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ProgressLabels"
        app:layout_constraintTop_toBottomOf="@+id/DistanceTracker" />

    <TextView
        android:id="@+id/ProgressTitle"
        android:layout_width="452dp"
        android:layout_height="142dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="630dp"
        android:background="#FFFFFF"
        android:text="Progress"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ResourceLabels"
        android:layout_width="292dp"
        android:layout_height="676dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="250dp"
        android:background="#FFFFFF"
        android:text="People: Money: Food: Oxen: Clothes: Tongues: Axles: Wheels:"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WheelsCount"
        android:layout_width="70dp"
        android:layout_height="91dp"
        android:layout_marginStart="15dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/AxlesCount" />

    <TextView
        android:id="@+id/AxlesCount"
        android:layout_width="70dp"
        android:layout_height="87dp"
        android:layout_marginStart="15dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/TonguesCount" />

    <TextView
        android:id="@+id/TonguesCount"
        android:layout_width="70dp"
        android:layout_height="82dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/ClothesCount" />

    <TextView
        android:id="@+id/ClothesCount"
        android:layout_width="96dp"
        android:layout_height="79dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/OxenCount" />

    <TextView
        android:id="@+id/OxenCount"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:layout_marginStart="15dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/FoodCount" />

    <TextView
        android:id="@+id/FoodCount"
        android:layout_width="123dp"
        android:layout_height="82dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/MoneyCount" />

    <TextView
        android:id="@+id/MoneyCount"
        android:layout_width="185dp"
        android:layout_height="78dp"
        android:layout_marginStart="15dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/PeopleCount" />

    <TextView
        android:id="@+id/PeopleCount"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/ResourceLabels"
        app:layout_constraintTop_toBottomOf="@+id/ResourceTitle" />

    <TextView
        android:id="@+id/ResourceTitle"
        android:layout_width="503dp"
        android:layout_height="149dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:text="Resources"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/ResourceLabels"
        app:layout_constraintStart_toStartOf="@+id/ResourceLabels" />

    <Button
        android:id="@+id/NextDayButton"
        android:layout_width="302dp"
        android:layout_height="151dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="413dp"
        android:text="Next Day"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>