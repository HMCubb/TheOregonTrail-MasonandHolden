<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LocationPage">

    <Button
        android:id="@+id/resourcesButton"
        android:layout_width="353dp"
        android:layout_height="129dp"
        android:layout_marginStart="391dp"
        android:layout_marginBottom="70dp"
        android:text="resources"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="192dp"
        android:layout_height="126dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="74dp"
        android:text="shop"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/partyButton" />

    <Button
        android:id="@+id/nextButtonLocationButton"
        android:layout_width="346dp"
        android:layout_height="126dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="73dp"
        android:text="Next Day"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopButton" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="427dp"
        android:layout_height="127dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="73dp"
        android:text="pace/rations"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resourcesButton" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="434dp"
        android:layout_height="97dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="73dp"
        android:background="#FFFFFF"
        android:text="Location"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="440dp"
        android:layout_height="560dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationText"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/eventTextLocation"
        android:layout_width="1216dp"
        android:layout_height="566dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="87dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:text="events."
        android:textColor="#000000"
        android:textSize="34sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/organ_trale" />
</androidx.constraintlayout.widget.ConstraintLayout>