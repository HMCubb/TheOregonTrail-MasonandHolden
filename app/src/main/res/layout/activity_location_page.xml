<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LocationPage">

    <Button
        android:id="@+id/resourcesButton"
        android:layout_width="350dp"
        android:layout_height="118dp"
        android:text="resources"
        android:textSize="48sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="970dp"
        tools:layout_editor_absoluteY="425dp" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="350dp"
        android:layout_height="118dp"
        android:text="map"
        android:textSize="48sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="970dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="427dp"
        android:layout_height="127dp"
        android:text="pace/rations"
        android:textSize="48sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="970dp"
        tools:layout_editor_absoluteY="576dp" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="350dp"
        android:layout_height="118dp"
        android:text="shop"
        android:textSize="48sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="970dp"
        tools:layout_editor_absoluteY="726dp" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="473dp"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        android:text="Location"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/nextButtonLocationButton"
        android:layout_width="350dp"
        android:layout_height="118dp"
        android:text="Next Day"
        android:textSize="48sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="970dp"
        tools:layout_editor_absoluteY="879dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="477dp"
        android:layout_height="756dp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="237dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>