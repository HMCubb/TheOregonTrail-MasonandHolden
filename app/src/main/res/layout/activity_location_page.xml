<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LocationPage">

    <Button
        android:id="@+id/partyButton"
        android:layout_width="427dp"
        android:layout_height="127dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="71dp"
        android:text="pace/rations"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/resourcesButton"
        app:layout_constraintTop_toBottomOf="@+id/eventTextLocation" />

    <Button
        android:id="@+id/resourcesButton"
        android:layout_width="353dp"
        android:layout_height="129dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="44dp"
        android:text="resources"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintEnd_toStartOf="@+id/partyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTextLocation" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="192dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        android:text="shop"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintEnd_toStartOf="@+id/nextButtonLocationButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/partyButton"
        app:layout_constraintTop_toBottomOf="@+id/eventTextLocation" />

    <Button
        android:id="@+id/nextButtonLocationButton"
        android:layout_width="346dp"
        android:layout_height="126dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="234dp"
        android:text="Next Day"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTextLocation" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="927dp"
        android:layout_height="94dp"
        android:layout_marginStart="496dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="497dp"
        android:background="#FFFFFF"
        android:text="Location"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eventTextLocation"
        android:layout_width="1216dp"
        android:layout_height="566dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="352dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:text="events."
        android:textColor="#000000"
        android:textSize="34sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/organ_trale" />
</androidx.constraintlayout.widget.ConstraintLayout>